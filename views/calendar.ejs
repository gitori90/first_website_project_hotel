
<div class="container-fluid calendar-wrapper">



<div class="calender-top">
  <ul class="calendar-top-list">

  <li class="top-item"><i class="fas fa-chevron-left top-left-arrow"></i></li>

  <li class="month-label top-item"></li>

  <li class="top-item"><i class="fas fa-chevron-right top-right-arrow"></i></li>

  </ul>
</div>
<table class="calendar">
  <!-- <caption class="month-label"></caption> -->
  <tr class="header">
    <th class="calendarHeader">Sun</th>
    <th class="calendarHeader">Mon</th>
    <th class="calendarHeader">Tue</th>
    <th class="calendarHeader">Wed</th>
    <th class="calendarHeader">Thu</th>
    <th class="calendarHeader">Fri</th>
    <th class="calendarHeader">Sat</th>
  </tr>

</table>
<form id="datesForm" action="" method="post">

<button onclick="insertIDs()" type="submit" class="calendar-submit-btn">Confirm To Checkout</button>
<input class="datesInput" type="text" name="daysChosen" value="">
</form>
</div>

<script type="text/javascript">
  <%- include("calendar.js") -%>
  var chosenDays = "<%=chosenDays%>";
  let imageLink = "";
  let textSuite = $(".chosenSuite").text();

  if (textSuite === "Grand") {
    imageLink = "<img src='images/beach-hotel-room4.jpg' id='chosenImage' alt='...'>";
  } else if (textSuite === "Medium") {
    imageLink = "<img src='images/beach-hotel-room2.jpg' id='chosenImage' alt='...'>";
  } else if (textSuite === "Small") {
    imageLink = "<img src='images/beach-hotel-room1.jpg' id='chosenImage' alt='...'>";
  }

  $(".chosenSuite").prepend("Suite Type: ");
  $("#liImage").append(imageLink);

  function markTakenDays()
  {
    var chosenDaysList = chosenDays.split(",");
    if(chosenDaysList.length > 1)
    {
      chosenDaysList.forEach(day => {
        $("#" + day).addClass("day-full");
        $("#" + day).removeClass("day-available");
        $("#" + day).off("click");
        $("#" + day).text("Taken");
      });
    }
  }
  markTakenDays();
</script>
